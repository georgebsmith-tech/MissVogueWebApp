<%- include('./partials/head.ejs') %>

<header class="user-dashboard-header">
    <nav class="user-nav">
        <div>
            <h2>Miss Vogue Nigeria</h2>
            <div class="user-toggle">
                <div></div>
                <div></div>
                <div></div>
            </div>

        </div>
        <div>
            <ul>

            </ul>
        </div>

    </nav>
    <section class="container quick-access">
        <div>
            <span>
                <i class="fa fa-search"></i>
            </span>
            <span>
                <i class="fa fa-bell"></i>
            </span>
            <span>
                <i class="fa fa-envelope"></i>
            </span>
        </div>
        <div>
            <div class="identity">
                <span class="avatar-wrapper">
                    <i class="fa fa-user"></i>

                </span>
                <span>John Doe</span>
            </div>

        </div>
    </section>

</header>
<section class="modal hide add-modal">
    <div>
        <header>
            <h2>Add New Votes for contestant number ...</h2>
        </header>
        <main>
            <form action="/admin/dashboard/contestants/<%= contestant._id %>?_method=PUT" method="POST">
                <input type="number" placeholder="Number of votes" name="newVotes">
                <button type="submit">Add Vote</button>
            </form>
        </main>
        <section class="footer"></section>
    </div>
</section>
<section class="modal hide sub-modal">
    <div>
        <header>
            <h2>Remove Votes from contestant number ...</h2>
        </header>
        <main>
            <form action="/admin/dashboard/contestants/<%= contestant._id %>?_method=PUT" method="POST">
                <input type="hidden" name="operation" value="-1">
                <input type="number" placeholder="Number of votes" name="newVotes">
                <button type="submit">Remove Votes</button>
            </form>
        </main>
        <section class="footer"></section>
    </div>
</section>
<main class="user-dashboard">

    <section class="container">
        <header>
            <h2 class="dashboard">Dashboard</h2>
            <div class="bread-crumbs"><a href="/">Dashboard</a></div>
        </header>
    </section>

    <section class="contestants-details">
        <div>
            <div>
                <div>

                </div>
                <div>
                    <h3>Name:
                        <%= contestant.name %>
                    </h3>
                    <h3>State: <%= contestant.state %></h3>
                    <h3>Votes: <%= contestant.votes %></h3>
                </div>
                <div>
                    <div>

                        <i class="fa fa-pencil controls" title="Edit Contestant Profile"></i>
                        <i class="controls fa fa-trash" title="Delete Contestant"></i>

                    </div>
                    <div>
                        <i class="fa fa-plus controls" aria-hidden="true" class="Add Votes"></i>
                        <i class="fa fa-minus controls" aria-hidden="true"></i>

                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
<footer>
    <section class="rights">
        <div class="center-text">
            <span> &copy;Miss Vogue Nigeria 2020. All Rights Reserved.</span>
            <span>Created with <i class="fa fa-heart" aria-hidden="true"></i> by Smartech Global</span>
        </div>


    </section>
</footer>
<script src="../js/contestants.js"></script>
</body>

</html>
